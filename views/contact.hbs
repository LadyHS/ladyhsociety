<section id="contact">
 
  <section id="contact-form" class="main-section">
    <h2 class="hero-title" style="margin-top:50px; margin-bottom:50px">{{{__ "contact.contactForm.title"}}}</h2>
    <div class="form contact-form">
      <div class="form-group flex-col">
        <label for="client-name">{{{__ "contact.contactForm.name"}}}<span class="mandatory">*</span></label>
        <input type="text" name="name" id="client-name" required />
      </div>
      <div class="form-group flex-col">
        <label for="client-email">{{{__ "contact.contactForm.email"}}}<span class="mandatory">*</span></label>
        <input type="text" name="email" id="client-email" required />
      </div>
      <div class="form-group flex-col">
        <label for="client-message">{{{__ "contact.contactForm.message"}}}<span class="mandatory">*</span></label>
        <textarea name="message" id="client-message" cols="30" rows="6"></textarea>
      </div>
      <div class="flex align-c justify-e">
        <div class="additional"></div>
        <button id="send-contact" class="button black-button"
          type="submit">{{{__ "contact.contactForm.button"}}}</button>
      </div>
    </div>
    <div>
      <p style="font-style:italic">{{{__ "contact.contactForm.legal"}}}</p>
    </div>
  </section>
  
</section>