<section id="mission">
  <section class="container flex wrap">
    <header class="header-intro">
      <div class="center-text main-title"><h1><span>{{{__
              "mission.mainTitle"
            }}}</span></h1></div>
      <p class="catchphrase">{{{__ "mission.subtitle"}}}</p>
      <a href="#objectives" class="icon-container">
        <i class="fa fa-chevron-down" aria-hidden="true"></i>
      </a>
    </header>
  </section>

  <section id="objectives" class="flex wrap main-section">
    <h2 class="hero-title">{{{__ "mission.obj.title.1"}}}</h2>
    <p class="main-paragraph">{{{__ "mission.obj.intro"}}}</p>
    <h2 class="hero-title">{{{__ "mission.obj.title.2"}}}</h2>
    <ol>
      <li>
        <p>{{{__ "mission.obj.content.1"}}}</p>
      </li>
      <li>
        <p>{{{__ "mission.obj.content.2"}}}</p>
      </li>
      <li>
        <p>{{{__ "mission.obj.content.3"}}}</p>
      </li>
      <li>
        <p>{{{__ "mission.obj.content.4"}}}</p>
      </li>
    </ol>
  </section>

  <section id="origin" class="main-section">
    <h2 class="hero-title">{{{__ "mission.comic.title"}}}</h2>
    <p class="hero-subtitle">{{{__ "mission.comic.subtitle"}}}</p>
    <div id="comic" class="comic">
      <div class="comic-item-small comic-item">
        <img
          src="/images/{{{__ 'mission.comic.1'}}}.svg"
          alt="comic of intro to manifesto 1"
        />
      </div>
      <div class="comic-item-small comic-item">
        <img
          src="/images/{{{__ 'mission.comic.2'}}}.svg"
          alt="comic of intro to manifesto 2"
        />
      </div>
      <div class="comic-item-small comic-item">
        <img
          src="/images/{{{__ 'mission.comic.3'}}}.svg"
          alt="comic of intro to manifesto 3"
        />
      </div>
      <div class="comic-item-small comic-item">
        <img
          src="/images/{{{__ 'mission.comic.4'}}}.svg"
          alt="comic of intro to manifesto 4"
        />
      </div>
      <div class="comic-item-big comic-item">
        <img
          src="/images/{{{__ 'mission.comic.5'}}}.svg"
          alt="comic of intro to manifesto 5"
        />
      </div>
    </div>
    <div class="final-button">
      <a href="/manifeste" class="black-button button" target="blank">{{{__
          "mission.continue"
        }}}
      </a>
    </div>
  </section>

</section>